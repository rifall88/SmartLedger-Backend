{
  "openapi": "3.0.0",
  "info": {
    "title": "SmartLedger API",
    "version": "1.0.0",
    "description": "Dokumentasi API website SmartLedger."
  },
  "servers": [
    {
      "url": "https://apimyschedule.projectbase.my.id",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Schedules"
    },
    {
      "name": "Expenditures"
    },
    {
      "name": "Debts"
    }
