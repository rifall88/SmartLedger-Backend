                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "date": { "type": "string", "format": "date" },
                  "time": {
                    "type": "string",
                    "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
